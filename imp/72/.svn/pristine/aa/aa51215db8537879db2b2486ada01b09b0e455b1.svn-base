#include<stdio.h>
#include<stdlib.h>

int main(){

	int input;
	int result;
	int mult ;
	printf("Bitte die Dezimalnummer eingeben: ");
	scanf("%d" , &input);

	result = 0;
	 mult = 1;
	do{
		result += (input % 2)*mult;
		input /= 2;
		mult *= 10;

	}while(input);

	printf("in Binaer betraegt: %d \n" , result);

	return 0;
}
