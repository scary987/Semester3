int main()
{
	
	float e,d,f;
	e = 1;
	f = 1.10;

	printf("Programm zur Umrechnung von Geldbetraegen [Euro in Dollar] \n");
	printf("----------------------------------------------------------\n");
	printf("\n");

	while (e != 0)
	{
		printf("Bitte geben Sie einen Betrag in Euro ein (Abbruch mit 0):");
		scanf("%f", &e);

		if (e == 0)
		{
			printf("Abgebrochen.\n");
			break;
		}

		d = e * f;
		printf("Der Betrag entspricht %f USD. \n", d );
		printf("\n");

	}

	return 0;
}