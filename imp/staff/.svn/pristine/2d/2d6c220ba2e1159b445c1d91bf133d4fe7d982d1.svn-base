\section{Felder und Referenzen}


\begin{frame}[fragile]{Felder und Referenzen}

	\begin{itemize}
		\item Für eine Variable \lstinline|x| liefert \lstinline|&x| die \emp{Adresse}, an der der \emp{Wert} von \lstinline|x| gespeichert ist
		\item Für eine Adresse \lstinline|a| liefert \lstinline|*a| den \emp{Wert}, der an der \emp{Adresse} \lstinline|a| gespeichert ist
		\item \lstinline|nums[x]| ist das gleiche wie \lstinline|*(nums + x)|
		\item Insbesondere ist \lstinline|nums[0]| das gleiche wie \lstinline|*nums|
		\item Eine Feld-Variable (z.B. vom Typ \lstinline|int[]|) ist also eigentlich eine Adresse
	\end{itemize}
		
\end{frame}

\begin{frame}[fragile]{Felder und Referenzen}

	\begin{itemize}
		\item Rekursion von links bzw. von vorne
			\begin{lstlisting}[gobble=8]
				int array_count_rec(int key, int* nums, int l) {
				  if (l <= 0) {
				    return 0;
				  } else {
				    int tail_result = array_count_rec(key, nums + 1, l - 1);
				    /* nums + 1 == &(*(nums + 1)) == &(nums[1]) */
				    return tail_result + (nums[0] == key ? 1 : 0);
				  }
				}
			\end{lstlisting}	
		\item Rekursion von rechts bzw. von hinten
			\begin{lstlisting}[gobble=8]
				int array_count_rec2(int key, int* nums, int l) {
				  if (l <= 0) {
				    return 0;
				  } else {
				    int tail_result = array_count_rec2(key, nums, l - 1);
				    return tail_result + (nums[l - 1] == key ? 1 : 0);
				  }
				}
			\end{lstlisting}
	\end{itemize}


\end{frame}

