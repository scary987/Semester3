#include <stdio.h> 
/* 6 Punkte */
/* Ausgabe auf Aufgabenblatt entspricht noch dem Umrechnungskurs von 1.17 USD ! */
int main() {
	
	float euro; /* 1 Punkt passenden Datentyp mit double oder float waehlen */
	
	printf("Bitte geben Sie eine Betrag in Euro ein (Abbruch mit 0):"); /* 1 Punkt Umsetzung Aufgabe -Eingabeaufforderung */
	scanf("%f", &euro); // 1 Punkt fuer korrektes Einlesen ( %lf bei double)
	
	while (euro != 0) { /* 1 Punkt fuer korrekt terminierende Schleife */
		printf("Der Betrag entspricht %.2f USD\n", euro * 1.10); /* 1 Punkt fuer korrektes Rechnen, 1 Punkt fuer korrekte Ausgabe */
		
			printf("Bitte geben Sie eine Betrag in Euro ein (Abbruch mit 0):"); /* 1 Punkt Umsetzung wiederholte Eingabeaufforderung und Eingabe */
			scanf("%f", &euro);
	}
	
	return 0;
	
}

