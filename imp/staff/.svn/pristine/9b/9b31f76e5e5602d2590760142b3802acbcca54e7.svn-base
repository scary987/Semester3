	\subsection{Quersumme}
	
	\begin{lstlisting}[gobble=4]
		int digit_sum(int n) {
		  if (n <= 0) return 0;  
		  return n % 10 + digit_sum(n / 10);
		}
	\end{lstlisting}
	
	\subsection{Umrechnung ins Oktalsystem}
	
	\begin{lstlisting}[gobble=4]
		void octal(int n) {
		  if (n <= 0) return;
		  octal(n / 8);
		  printf("%d", n % 8);
		}
	\end{lstlisting}
		
