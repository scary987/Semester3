	\begin{lstlisting}[gobble=4]
		#include <stdio.h>
		
		int main() {
		  
		  int input = 0;
		  int sum = 0, count = 0;
		  
		  do {
		    printf("Zahl eingeben: ");
		    scanf("%d", &input);
		    if(input < 0)
		      break;
		    sum += input;
		    count++;
		  } while (1);
		  
		  printf("Der Durchschnitt ist %f\n", sum * 1.0 / count);
		  
		  return 0;
		} 
	\end{lstlisting}
	
