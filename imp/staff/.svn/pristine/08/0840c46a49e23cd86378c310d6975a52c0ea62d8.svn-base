		#include <stdio.h>
		
		int main() {
			int i;
			int counter = 0;
		
			printf("Zahl eingeben: ");
			scanf("%d", &i);
		
			for(; (i % 2) == 0; i = i / 2) {
				counter += 1;
			}
		
			printf("Konnte %d-mal durch zwei teilen.\n", counter); 
		
			return 0;
		}
	\end{lstlisting}
	
