	\section{Standardeingabe \& Standardausgabe}
	
	\begin{lstlisting}[gobble=4]
		#include <stdio.h>
		
		int capitalize(int c) {
			if (c >= 'a' && c <= 'z')
				return c - ('a' - 'A');
			else
				return c;
		}
		
		int main() {
			
			int c;
			
			while ((c = getchar()) != EOF) {
				putchar(capitalize(c));
			}
			
			return 0;
		}
	\end{lstlisting}

	
