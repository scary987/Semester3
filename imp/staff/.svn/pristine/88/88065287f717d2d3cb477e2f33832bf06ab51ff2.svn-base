	\subsection{Alphabet}
	
	\begin{lstlisting}[gobble=4]
		int offset(int c) {
		  if (c >= 'A' && c <= 'Z') {
		    return c - 'A';
		  } else if (c >= 'a' && c <= 'z') {
		    return c - 'a';
		  } else {
		    return -1;
		  }
		}
	\end{lstlisting}
	
	\subsection{Primzahlen}

	\begin{lstlisting}[gobble=4]
		#include <stdio.h>
		
		int isPrime(int n) {
			int f, isprime = 1;
			for(f = 2; isprime && f*f <= n; f++) {
				if(n % f == 0) isprime = 0;
			}
			return isprime;
		}
				
		int main() {
			int limit, number;
			
			printf("Search limit: ");
			scanf("%d", &limit);
			
			for(number = 2; number <= limit; number++) {
				if(isPrime(number)) {
					printf("Found prime: %d\n", number);
				}
			}
			return 0;
		}	
	\end{lstlisting}

