	\section{Felder}
	
	\subsection{Summe}
	
	\begin{lstlisting}[gobble=4]
		double array_sum(double nums[], int n) {
			int i;
			double sum;
			
			for(i = 0; i < n; i++)
				sum += nums[i];
			
			return sum;
		}
	\end{lstlisting}
	
	\subsection{Ausgabe}
	
	\begin{lstlisting}[gobble=4]
		void print_array(int a[3][3]) {
			int i, j;
			
			for(i = 0; i < 3; i++) {
				for(j = 0; j < 3; j++) {
					printf("%5d ", a[i][j]);
				}
				printf("\n");
			}
		}
	\end{lstlisting}
	
	\subsection{Textstatistik}
	
	\begin{lstlisting}[gobble=4]
		int main() {		
			int i, c, n;
			int count[26];
			
			for(i = 0; i < 26; ++i) {
				count[i] = 0;
			}
			
			while ((c = getchar()) != EOF) {
				n = offset(c);
				if (n != -1) {
					count[n]++;
				}
			}
			
			for(i = 0; i < 26; ++i) {
				printf("%c: %d\n", i + 65, count[i]);
			}
		}
	\end{lstlisting}	
	
